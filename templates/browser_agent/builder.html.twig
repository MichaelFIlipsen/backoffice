<h4>Build Boomerang:</h4>
<hr />
<form id="boomerang_builder" action="{{ path('browser_agent_generate') }}" type="post">
    <div class="form-group">
        <label>1) Specify beacon catcher endpoint/address:</label>
        <input type="text" name="beacon_catcher_address" class="form-control" id="beacon_catcher_address" placeholder="e.g. https://www.example.com/beacon-catcher.php">
    </div>
    <div class="form-group">
        <label>2) Include Boomerang Plugins:</label>
        {% for key, plugin in boomerang_plugins %}
        <div class="form-check">
            <input checked name="plugins[{{ key }}]" class="form-check-input" type="checkbox" id="{{ key }}_check">
            <label class="form-check-label" for="{{ key }}_check">
            {{ plugin.label }}
            </label>
            <span class="float-right docs-link"><a target="_blank" href="{{ plugin.docs_link }}">Read Docs</a></span>
        </div>
        {% endfor %}
    </div>
    <hr />
    <div class="form-group row">

        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-label-right float-right">
                Build
                <span><i class="fa fa-gavel"></i></span></button>
        </div>
    </div>
</form>