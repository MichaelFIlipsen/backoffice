<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Browser Agent</a></li>
        <li class="breadcrumb-item active" aria-current="page">Builder</li>
    </ol>
</nav>

<form>
    <div class="form-group row">
        <label for="beacon_catcher_address" class="col-sm-2 col-form-label">Beacon catcher address</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" id="beacon_catcher_address" placeholder="e.g. https://my.beacon-catcher.com">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">Boomerang Plugins</div>
        <div class="col-sm-6">
            {% for name, label in boomerang_plugins %}
            <div class="form-check">
                <input name="{{ name }}" class="form-check-input" type="checkbox" id="{{ name }}_check">
                <label class="form-check-label" for="{{ name }}_check">
                    {{ label }}
                </label>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary btn-label-right float-right">
                Build
                <span><i class="fa fa-play-circle-o"></i></span></button>
        </div>
    </div>
</form>