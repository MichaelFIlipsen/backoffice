<form class="float-left ml-2" method="post" action="{{ path('page_type_config_delete', {'id': page_type_config.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page_type_config.id) }}">
    <button class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
</form>