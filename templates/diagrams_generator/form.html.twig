<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page"><h3>Generate Diagram</h3></li>
    </ol>
</nav>
<div>
    <form id="diagram_generator" class="form-horizontal" role="form" action="{{ path('diagrams_generator_generate') }}">
        <div class="diagram-filters">
            <fieldset>
                <div class="row">
                    <div class="col-xs-12 col-sm-3">
                        <div class="form-group">
                            <label for="page-type">Perf. Metric:</label>
                            <select name="perf_metric" class="form-control form-control-sm" id="source">
                                <option value="" selected="selected">---</option>
                                {% for metric in navigation_timings %}
                                <option value="{{ metric.getMetricOffsetKey() }}">{{ metric.getMetricLabel() }}</option>
                                {% endfor %}
                            </select>
                            <label for="bucket-size">Bucket Size:</label>
                            <select name="bucket-size" class="form-control form-control-sm" id="bucket-size">
                                <option value="100">0.1 sec</option>
                                <option value="200">0.2 sec</option>
                                <option value="300">0.3 sec</option>
                                <option value="400">0.4 sec</option>
                                <option value="500">0.5 sec</option>
                            </select>
                            <label for="range">Range:</label>
                            <select name="range" class="form-control form-control-sm" id="range">
                                <option value="1000">1 sec</option>
                                <option value="2000">2 sec</option>
                                <option value="3000">3 sec</option>
                                <option value="4000">4 sec</option>
                                <option selected value="5000">5 sec</option>
                                <option value="6000">6 sec</option>
                                <option value="7000">7 sec</option>
                                <option value="8000">8 sec</option>
                                <option value="9000">9 sec</option>
                                <option value="10000">10 sec</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <div class="form-group">
                            <label for="user_agent">User Agent:</label>
                            <div class="row">
                                <div class="col-4">
                                    <select name="filter[user_agent][condition]" class="form-control" id="user_agent">
                                        <option value="is">is</option>
                                        <option value="contains">contains</option>
                                        <option value="starts_with">starts with</option>
                                        <option value="ends_on">ends on</option>
                                    </select>
                                </div>
                                <div class="col-8">
                                    <input name="filter[user_agent][search_value]" type="text" class="form-control form-control-sm" id="user_agent" />
                                </div>
                            </div>
                            <label for="page_type">Page Type:</label>
                            <div class="row">
                                <div class="col-12">
                                    <select name="filter2[page_type]" class="form-control form-control-sm" id="page_type">
                                        <option value="*">All</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <div class="form-group has-feedback">
                            <label>Period:</label>
                            <br />
                            <div class="date-picker-wrapper float-left">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="current_period_from_date" name="period[0][current_period_from_date]" value="10/24/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                            -
                            <div class="date-picker-wrapper float-right">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="current_period_to_date" name="period[0][current_period_to_date]" value="10/24/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                            <br />
                            <label><input type="checkbox" checked /> Compare with other periods</label>
                            <br />
                            <div class="date-picker-wrapper float-left">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="previous_period_from_date" name="period[1][current_period_from_date]" value="10/16/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                            -
                            <div class="date-picker-wrapper float-right">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="previous_period_to_date" name="period[1][current_period_to_date]" value="10/17/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                            <br />
                            <br />
                            <div class="date-picker-wrapper float-left">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="previous_period_from_date" name="period[2][current_period_from_date]" value="09/30/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                            -
                            <div class="date-picker-wrapper float-right">
                                <input class="form-control form-control-sm calendar-date-picker" type="text" id="previous_period_to_date" name="period[2][current_period_to_date]" value="09/30/2018">
                                <span class="fa fa-calendar txt-danger form-control-feedback"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        {#<div class="form-group">#}
                            {#<label>Business Metric:</label>#}
                            {#<br />#}
                            {#<label><input type="checkbox" name="bounce-rate" /> Bounce Rate</label>#}
                            {#<br />#}
                            {#<label><input type="checkbox" name="conversion-rate" /> Conversion Rate</label>#}
                            {#<br />#}
                        {#</div>#}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-label-right float-right">
                    Run <span><i class="fa fa-play-circle-o"></i></span>
                </button>
            </fieldset>
        </div>
    </form>
    <script type="text/javascript">
        $(".calendar-date-picker").datepicker();
    </script>
    <div id="diagramContainer"></div>
</div>
<script type="text/javascript">
    var basicRumPlot = function(data) {
        var layout = {
            xaxis: {
                tickvals: [1000, 2000, 3000, 4000, 5000],
                ticktext: ["1 sec", "2 sec", "3 sec", "4 sec", "5 sec"]
            },
            yaxis: {
                title: 'Website Visits',
//                fixedrange: true,
//                range: [0, 3]
            },
            legend: {
                x: 0,
                y: 1.2,
                traceorder: 'normal',
                font: {
                    family: 'sans-serif',
                    size: 12,
                    color: '#000'
                },
                bgcolor: '#E2E2E2',
                bordercolor: '#FFFFFF',
                borderwidth: 2
            }
        };

        Plotly.newPlot('diagramContainer', data, layout);
    };
</script>

<script type="text/javascript">
    var diagramGeneratorForm = $('#diagram_generator');

    diagramGeneratorForm.on('submit', function(e) {
        e.preventDefault();
        var dataString = $(diagramGeneratorForm).serialize();
        var formAction = $(this).attr('action');
        $.ajax({
            type: "POST",
            url: formAction,
            data: dataString,
            dataType: "json",
            success: function(data) {
                basicRumPlot(data.response);
            },
            error: function() {
                alert('error');
            }
        });
    });
</script>